/* pages/mine/mine.wxss */
.top {
  text-align: center;
  /* background: linear-gradient(-45deg, #336799 0%, #66cdcc 100%); */
  background-size: contain;
  color: #fff;
  position: relative;
  height: 480rpx;
}

.display-form {
  width: 100%;
}

.icon-diy {
  margin-left: 10rpx;
}

.disply-button {
  padding: 0;
  margin: 0;
  background-color: #fff;
  width: 100%;
  text-align: left;
  font-size: 30rpx;
}

.disply-button::after{ border: none; }

.top> view:first-child {
  margin-bottom: 30rpx;
}

.diy-mine-menu {
  margin-top: 200rpx;
}

.name {
  color: #333;
  margin-top: 70rpx;
  font-size: 38rpx;
  min-height: 42rpx;
}

.bg-img {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
}

.diy {
  margin-top: 35rpx;
}

.absolute-view {
  width: 92%;
  height: 300rpx;
  background-color: #fff;
  z-index: 3;
  position: absolute;
  bottom: -123rpx;
  border-radius: 20rpx;
  left: 4%;
  box-shadow: 0px 0px 10px 0px rgba(170,170,170, .7);
}

.mine-avatar {
  position: absolute;
  top: -70rpx;
  left: 41%;
}