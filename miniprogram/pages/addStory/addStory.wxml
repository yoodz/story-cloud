<view>
  <form bindsubmit="formSubmit">
    <view class="cu-form-group margin-top">
      <view class="title">标题</view>
      <input name="title" placeholder="两字短标题"></input>
    </view>
    <view class="cu-form-group top">
      <view class="title">点文本框</view>
      <textarea name="content" placeholder="请输入内容..." maxlength="-1" disabled="{{modalName!=null}}" placeholder-class="placeholder" class="{{textareaBValue?'value':''}}" bindinput="textareaBInput"></textarea>
    </view>
    <view class="cu-form-group margin-top">
      <view class="title">允许评论</view>
      <switch name="comment"></switch>
    </view>
    <view class="padding flex flex-direction">
      <button form-type="submit" class="cu-btn bg-green lg">提交</button>
    </view>
  </form>
</view>