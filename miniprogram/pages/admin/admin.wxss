/* pages/startCommon/startCommon.wxss */
.flex-wrap {
  display: flex;
  margin: 30rpx auto;
  border-radius:10rpx;
  background-color: #fff;
  box-shadow: 0px 0px 10px 0px rgba(170,170,170, .7);
}

.flex-wrap>image {
  width: 39%;
  height: 200rpx;
}
.second-view {
  margin-left: 10rpx;
}

.right-content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 20rpx 0;
  margin-left: 20rpx;
  width: 56%;
}

.icon-content {
  font-size: 10px;
  color: #aaa;
}

.modal {
  position: fixed;
  width: 100%;
  height: 100vh;
  top: 0;
  left: 0;
  z-index: 999;
  background-color: #fff;
}

.modal .message {
  font-size: 40rpx;
  color: red;
  margin-top: 50%;
  text-align: center;
}

.input-number {
  padding: 0 140rpx;
}

.two-button {
  text-align: center;
}

.two-button button {
  margin-right: 10rpx;
}