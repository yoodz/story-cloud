<view class="free-WaterfallFlow">
  <view class="no-message" wx:if="{{storyList.length < 1}}">还没有消息(⊙﹏⊙)</view>

  <view wx:if="{{currentTab==0}}">
    <block>
      <view class="flex-wrap" wx:for="{{storyList}}" wx:key="{{index}}" wx:if="{{index%2==0}}" data-id='{{item._id}}' bindtap="toDetail">
        <image mode="widthFix" src="{{item.imgUrl}}"></image>
        <view>{{item.title}}</view>
        <view><text class="icon-attentionfill"></text> {{item.view}} <text class="icon-likefill second-view"></text> {{item.like}}</view>
      </view>
    </block>
    <block>
      <view class="flex-wrap" wx:for="{{storyList}}" wx:key="{{index}}" wx:if="{{index%2!=0}}" data-id='{{item._id}}' bindtap="toDetail">
        <image mode="widthFix" src="{{item.imgUrl}}"></image>
        <view>{{item.title}}</view>
        <view><text class="icon-attentionfill"></text> {{item.view}} <text class="icon-likefill second-view"></text> {{item.like}}</view>
      </view>
    </block>
  </view>
  <view wx:elif="{{currentTab==1}}">
    123
  </view>
</view>